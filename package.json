{
  "name": "educational-news-platform",
  "version": "1.0.0",
  "description": "Educational Real-Time News & Notifications Platform MVP",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "build": "npm run build:web",
    "build:web": "cd apps/web && npm run build",
    "start": "cd apps/web && npm start",
    "test": "npm run test:web",
    "test:web": "cd apps/web && npm run test",
    "lint": "npm run lint:web",
    "lint:web": "cd apps/web && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "next": "^16.0.2-canary.26"
  }
}